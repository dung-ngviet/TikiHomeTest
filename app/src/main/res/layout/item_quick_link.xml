<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:id="@+id/itemQuickLinkContainer"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/home_block_margin"
    android:layout_marginStart="@dimen/home_quicklink_item_horizontal_margin"
    android:layout_marginEnd="@dimen/home_quicklink_item_horizontal_margin"
    android:background="@android:color/white">
    <ImageView
        android:layout_width="@dimen/home_quicklink_item_image_size"
        android:layout_height="@dimen/home_quicklink_item_image_size"
        android:id="@+id/quickLinkImage"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_rounded_corner_8dp"
        tools:background="@android:color/holo_orange_dark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_quicklink_item_description_height"
        android:id="@+id/quickLinkDescription"
        android:gravity="center_horizontal|top"
        android:maxLines="2"
        tools:text="Bach hoa online"/>
</LinearLayout>