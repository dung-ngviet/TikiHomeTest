<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/home_flashdeal_item_image_height"
        android:id="@+id/ivProduct"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProduct"
        app:layout_constraintBottom_toTopOf="@id/vgSaleStatus"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_flashdeal_item_saleprogress_height"
        android:id="@+id/vgSaleStatus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <vn.dxg.tikihomedemo.utils.SaleProgress
            android:background="@drawable/flash_deal_progress_background"
            android:id="@+id/saleProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvSaleStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="@dimen/home_flashdeal_item_discount_text_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/item_flash_sale_discout_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>